<%#<p id="notice"><%= notice %></p>

<div class="body-full">


  <div class="container-fluid index-body">
    <div class="row">
      <h1>Idea 一覧</h1>
      <div id="main" class="col-sm-12 col-md-8">
       <div class="main-body">

<%#<table width="75%">%>
<table>
  <div class="table-responsive">
  <table class="table table-bordered" width="65%">
　　<table class="table table-condensed">
  <thead>
    <tr>
      <th width="10%">Title</th>
      <th width="5%">いいね</th>
      <th width="20%">Summary</th>
      <th width="20%">Content</th>
      <th width="5%">User</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><span class="fa fa-heart like-btn"><%= post.likes.count %></span>件</td>
        <td><%= post.summary %></td>
        <td><%= post.content %>          <%= link_to 'もっと見る', post %></td>
        <td><%= post.user.nickname %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%#<br>%>
<!-- ページング機能 -->
       <%= paginate @posts %>
 <%#</main>%>

 <%= link_to 'New Post', new_post_path %>
</div>

<!-- サイドバー -->
<div id="side" class="col-sm-12 col-md-4">
  <%#<div class="side__item sidebar__item--fixed">%>
    <%#<div id="side" class="col-sm-12 col-md-4">%>
    <!-- いいねが多い投稿一覧機能 -->
      <div class="rank-box">
        <%#<span class="rank-box-title"><i class="fa fa-check fa-fw"></i>いいね！ランキング</span>%>
        <span class="rank-box-title"><span class="fa fa-heart like-btn"></span>いいね！ランキング</span>
        <div class="not-under">
          <% @like_ranking.each.with_index(1) do |post, i| %>
            <%= link_to post do %>
              <div class ="rank">
                <table class="table table-sm">
                  <tbody>
                    <tr>
                      <td class="border-top-0"><%= i %>位　「<%= post.title %>」</td>
                    </tr>
                    </tbody>
                </table>
              </div>
            <% end %>
          <% end %>
        </div>
        <%= link_to 'もっと見る', posts_like_ranking_path, style: "text-decoration: underline" %>
  </div>
       <!-- いいねが多い投稿一覧機能ここまで -->

     </div>
    </div>
   </div>
 </div>
</div>
